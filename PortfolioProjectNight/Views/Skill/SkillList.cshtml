@using PagedList
@using PagedList.Mvc
@using PortfolioProjectNight.Models
@model PagedList.IPagedList<Skill>

@{
    ViewBag.Title = "SkillList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="alert alert-info"><strong>Yetenek Listesi ve İşlemleri</strong></div>
<table class="table table-striped">
    <tr style="background-color:cadetblue; color:white;">
        <th>#</th>
        <th>Başlık</th>
        <th>Değer</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.SkillName</td>
            <td>@item.Rate</td>
            <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<td><a href="/Skill/CreateSkill/" class="btn btn-outline-info">Yeni Yetenek Girişi</a></td>
<br /><br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("SkillList", new { page }), new PagedListRenderOptions
{
    LiElementClasses = new List<string> { "page-link" }
})
