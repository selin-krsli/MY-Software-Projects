@{
    ViewBag.Title = "CreateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4"></h2>
<div class="alert alert-success"><strong>Yeni Yetenek Ekleme Sayfası</strong></div>
    <form method="post">
        <label>Yetenek Başlığı</label>
        <input type="text" name="SkillName" class="form-control" />
        @Html.ValidationMessage("SkillName", "", new { @class = "text-danger" })
        <br />
        <label>Yetenek Değeri</label>
        <input type="number" name="Rate" class="form-control" />
        @Html.ValidationMessage("Rate", "", new { @class = "text-danger" })
        <br />
        <label>Yetenek Iconu</label>
        <input type="text" name="Icon" class="form-control" />
        <br />
        <button class="btn btn-outline-info">Yetenek Ekle</button>
    </form>

