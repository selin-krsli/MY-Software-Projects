@model PortfolioProjectNight.Models.Skill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yeni Yetenek Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(s => s.SkillId)
    <label>Yetenek Adı</label>
    @Html.TextBoxFor(s => s.SkillName, new { @class = "form-control" })
    <br />
    <label>Yetenek Oranı</label>
    @Html.TextBoxFor(s => s.Rate, new { @class = "form-control" })
    <br />
    <label>Yetenek Ikonu</label>
    @Html.TextBoxFor(s => s.Icon, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Yetenek Güncelle</button>
</form>

