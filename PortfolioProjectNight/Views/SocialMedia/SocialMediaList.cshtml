@model List<PortfolioProjectNight.Models.SocialMedia>
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Sosyal Medya Listesi ve İşlemleri</h2>
<table class="table table-striped">
    <tr style="background-color:cornflowerblue">
        <th>#</th>
        <th>Başlık</th>
        <th>Url</th>
        <th>Ikon</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SocialMediaID</td>
            <td>@item.Title</td>
            <td>@item.Url</td>
            <td>@item.Icon</td>
            <td>@item.Durum</td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Sil</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<td><a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info">Yeni Sosyal Medya Girişi</a></td>

