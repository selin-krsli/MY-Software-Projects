@model List<PortfolioProjectNight.Models.SocialMedia>
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="alert alert-info"><strong>Sosyal Medya Listesi</strong></div>

        <table class="table table-striped">
            <tr style="background-color:cadetblue; color:white;">
                <th>#</th>
                <th>Başlık</th>
                <th>Url</th>
                <th>Ikon</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SocialMediaID</td>
                    <td>@item.Title</td>
                    <td>@item.Url</td>
                    <td>@item.Icon</td>
                    <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }
        </table>

        <td><a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-info">Yeni Sosyal Medya Girişi</a></td>

