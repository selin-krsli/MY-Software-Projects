@model List<PortfolioProjectNight.Models.Testimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Referanslarım Listesi ve İşlemleri</h2>
<table class="table table-striped">
    <tr style="background-color:cadetblue; color:white;">
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Alt Başlık</th>
        <th>Yorum</th>
        <th>ImageUrl</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.NameSurname</td>
            <td>@item.SubTitle</td>
            <td>@item.Comment</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<td><a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-info">Yeni Referans Girişi</a></td>

