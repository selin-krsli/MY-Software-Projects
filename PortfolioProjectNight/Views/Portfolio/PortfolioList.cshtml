@model List<PortfolioProjectNight.Models.Portfolio>
@{
    ViewBag.Title = "PortfolioList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Portfolyo Sayfası</h2>
<table class="table table-striped">
    <tr style="background-color:cornflowerblue">
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PortfolioID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<td><a href="/Portfolio/CreatePortfolio/" class="btn btn-info">Yeni Referanslarım Bilgisi Girişi</a></td>

