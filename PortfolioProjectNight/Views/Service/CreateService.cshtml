@model PortfolioProjectNight.Models.Service
@{
    ViewBag.Title = "CreateService";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="alert alert-success"><strong>Yeni Hizmet Ekleme Sayfası</strong></div>
<form method="post">
    <label>Başlık</label>
    @Html.TextBoxFor(s => s.Title, new { @class = "form-control" })
    <br />
    <label>Ikon</label>
    @Html.TextBoxFor(s => s.Icon, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(s => s.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-info">Hizmet Ekle</button>
</form>

